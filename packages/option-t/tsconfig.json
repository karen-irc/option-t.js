{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        // https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping
        "target": "ES2017",
        "module": "es2015",
        "declaration": true,
        "lib": [
            "ES5",
            "ES2015.Promise",
            "ES2020.Promise",
            "ES2022.Error",
        ],

        "diagnostics": true,
        "noEmit": false,
        "outDir": "./__tmp_base"
    },
    "include": [
        "src/**/*",
    ]
}
